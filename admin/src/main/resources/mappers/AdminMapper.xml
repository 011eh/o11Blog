<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.o11eh.servicedemo.admin.mapper.AdminMapper">
    <resultMap id="admin" type="com.o11eh.servicedemo.admin.entry.Admin" autoMapping="true">
        <id property="id" column="id"/>
        <association property="role" javaType="com.o11eh.servicedemo.admin.entry.Role">
            <result property="name" column="roleName"/>
        </association>
    </resultMap>
    <select id="selectPage" resultMap="admin">
        select a.id, a.username, a.nick_name, a.status, a.role_id roleId, a.avatar, r.name roleName
        from back_admin a
             left join back_role r on a.role_id = r.id ${ew.customSqlSegment}
    </select>
    <select id="selectToLogin" resultType="com.o11eh.servicedemo.admin.entry.Admin">
        select a.*, r.name roleName
        from back_admin a
             left join back_role r on a.role_id = r.id ${ew.customSqlSegment}
    </select>
</mapper>
